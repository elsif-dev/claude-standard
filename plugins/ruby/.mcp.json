{
  "mcpServers": {
    "gems-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@ruby-mcp/gems-mcp@latest",
        "--quotes",
        "double",
        "--root",
        "${CLAUDE_PLUGIN_ROOT}"
      ],
      "description": "Ruby gems documentation and search"
    },
    "rails-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@ruby-mcp/rails-mcp@latest",
        "--root",
        "${CLAUDE_PLUGIN_ROOT}"
      ],
      "description": "Rails-specific development tools and documentation"
    }
  }
}
